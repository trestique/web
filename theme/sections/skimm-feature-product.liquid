<section class="slides-product-feature js-product_section">
    <div class="page-width ">
        <div class="slide-product-single swiper">
            <div class="swiper-wrapper wrapper">
                {% for block in section.blocks %}
                    {% assign product = block.settings.product %}

                    {% liquid 
                          case product.id 
                              when 6578644484196 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/img-1_85c19591-d063-443f-b7d7-02821e5dec11.png?v=1637086007"
                              when 6580015333476 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/IMG_2.png?v=1636670421"
                              when 6580203880548 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/IMG_3.png?v=1636670421"
                              when 6580206698596 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/IMG_4.png?v=1636670421"
                              when 6580199587940 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/IMG_5.png?v=1636670421"
                              when 6580187332708 
                                  assign img_small = "https://cdn.shopify.com/s/files/1/0114/0621/3220/files/IMG_6.png?v=1636670421"
                          endcase 
                      %}

                    <div class="swiper-slide product-card-slide-mini">
                        {% if product %}
                            <div class="product-title h5">
                                {{ product.title }}
                            </div>
                            <div class="content-image-product">
                                {% if img_small %}
                                    <img src="{{ img_small }}" alt="{{ product.title }}">
                                {% else %}
                                    <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title }}">
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="slides-wrapper-product swiper">
            <div class="swiper-wrapper">
                {% for block in section.blocks %}
                {% assign product = block.settings.product %}
                    <div class="swiper-slide slide-single">
                        {% if product %}
                            {% render 'card-feature-product' product: product, slide_number: forloop.index, length: forloop.length %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    <div class="feature-swiper-buttons">
        <!-- If we need navigation buttons -->
        <div class="feature-swiper-button-prev">
          <svg width="16" height="56" viewBox="0 0 16 56" fill="none" xmlns="http://www.w3.org/2000/svg">
